generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model admin {
  id          Int    @id @default(autoincrement())
  user        String
  senha       String
  nome        String
  sobrenome   String
  cpf         String
  codigoAdmin String
}

model customer {
  id        Int     @id @default(autoincrement())
  nome      String
  senha     String
  sobrenome String
  cpf       String
  endereco  String
  celular   String?
}

model product {
  id          Int     @id @default(autoincrement())
  tipoProduto String
  nome        String
  preco       Decimal
  descricao   String
}
